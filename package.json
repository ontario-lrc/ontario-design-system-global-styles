		},
		{
			"name": "Dawid Kasperowicz",
			"email": "dawid.kasperowicz@ontario.ca"
		}
	],
	"sass": "dist/styles/scss/theme.scss",
	"repository":
	{
		"type": "git",
		"url": "git+https://github.com/ontario-lrc/ontario-design-system-global-styles.git"
	},
	"bugs":
